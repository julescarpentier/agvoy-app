{% extends "base.html.twig" %}

{% block title %}
    Index des commentaires
{% endblock %}

{% block body %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Les commentaires</h2>
                </div>
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Auteur</th>
                            <th>Commentaire</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commentaire in commentaires %}
                            <tr>
                                <td>{{ commentaire.id }}</td>
                                <td>{{ commentaire.auteur }}</td>
                                <td>{{ commentaire.commentaire }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-primary" href="{{ path('public_room_show', {'id': room.id}) }}">Retour Ã 
                        l'annonce</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

