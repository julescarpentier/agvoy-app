{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Region</h2>
                </div>
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ region.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ region.name }}</td>
                        </tr>
                        <tr>
                            <th>Presentation</th>
                            <td>{{ region.presentation }}</td>
                        </tr>
                        <tr>
                            <th>Country</th>
                            <td>{{ region.country }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-primary" href="{{ path('region_index') }}">back to list</a>

                    <a class="btn btn-secondary" href="{{ path('region_edit', {'id': region.id}) }}">edit</a>

                    {{ include('region/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
