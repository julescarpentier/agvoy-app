{% extends 'base.html.twig' %}

{% block title %}Region index{% endblock %}

{% block body %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Region index</h2>
                </div>
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Presentation</th>
                            <th>Country</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for region in regions %}
                            <tr>
                                <td>{{ region.id }}</td>
                                <td>{{ region.name }}</td>
                                <td>{{ region.presentation }}</td>
                                <td>{{ region.country }}</td>
                                <td>
                                    <a class="btn btn-info btn-sm" href="{{ path('region_show', {'id': region.id}) }}">show</a>
                                    <a class="btn btn-secondary btn-sm" href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-primary" href="{{ path('region_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
