{% extends 'base.html.twig' %}

{% block title %}
Owner index
{% endblock %}

{% block body %}
<section class="page-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">Owner index</h2>
			</div>
			<div class="col-lg-12">

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Address</th>
							<th>Country</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for owner in owners %}
						<tr>
							<td>{{ owner.id }}</td>
							<td>{{ owner.address }}</td>
							<td>{{ owner.country }}</td>
							<td><a class="btn btn-info btn-sm"
								href="{{ path('owner_show', {'id': owner.id}) }}">show</a> <a
								class="btn btn-secondary btn-sm"
								href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a></td>
						</tr>
						{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>

				<a class="btn btn-primary" href="{{ path('owner_new') }}">Create
					new</a>
			</div>
		</div>
	</div>
</section>
{% endblock %}