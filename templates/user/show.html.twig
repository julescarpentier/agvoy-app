{% extends 'base.html.twig' %}

{% block title %}
User
{% endblock %}

{% block body %}
<section class="page-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">User</h2>
			</div>
			<div class="col-lg-12">

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Firstname</th>
							<td>{{ user.firstname }}</td>
						</tr>
						<tr>
							<th>Familyname</th>
							<td>{{ user.familyname }}</td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						</tr>
					</tbody>
				</table>

				<a class="btn btn-primary" href="{{ path('user_index') }}">back
					to list</a> <a class="btn btn-secondary"
					href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

				{{ include('user/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</section>
{% endblock %}
