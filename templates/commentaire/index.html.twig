{% extends 'base.html.twig' %}

{% block title %}
Commentaire index
{% endblock %}

{% block body %}
<section class="page-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">Comment index</h2>
			</div>
			<div class="col-lg-12">

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Commentaire</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for commentaire in commentaires %}
						<tr>
							<td>{{ commentaire.id }}</td>
							<td>{{ commentaire.commentaire }}</td>
							<td><a class="btn btn-info btn-sm"
								href="{{ path('commentaire_show', {'id': commentaire.id}) }}">show</a>
								<a class="btn btn-secondary btn-sm"
								href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>

				<a class="btn btn-primary" href="{{ path('commentaire_new') }}">Create
					new</a>
			</div>
		</div>
	</div>
</section>
{% endblock %}
