{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Room index</h2>
                </div>
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Summary</th>
                            <th>Description</th>
                            <th>Capacity</th>
                            <th>Surface</th>
                            <th>Price</th>
                            <th>Address</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for room in rooms %}
                            <tr>
                                <td>{{ room.id }}</td>
                                <td>{{ room.summary }}</td>
                                <td>{{ room.description }}</td>
                                <td>{{ room.capacity }}</td>
                                <td>{{ room.surface }}</td>
                                <td>{{ room.price }}</td>
                                <td>{{ room.address }}</td>
                                <td>
                                    <a class="btn btn-info btn-sm" href="{{ path('room_show', {'id': room.id}) }}">show</a>
                                    <a class="btn btn-secondary btn-sm" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-primary" href="{{ path('room_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
