{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    {% include 'layout/masthead.html.twig' %}
    <section class="page-section" id="annonces">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Nos annonces</h2>
                    <h3 class="section-subheading text-muted">Trouvez votre bonheur parmi nos centaines d'annonces.</h3>
                </div>
            </div>
            <div class="row">
                {% for room in rooms %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ room.summary }}</h5>
                                <p class="card-text">
                                    <span class="font-weight-bold">Description : </span>{{ room.description }}
                                </p>
                                <a href="{{ path('room_show', {id: room.id}) }}" class="btn btn-primary">Voir
                                    l'annonce</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% include 'layout/team.html.twig' %}
    {% include 'layout/contact.html.twig' %}
{% endblock %}
